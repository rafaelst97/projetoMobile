<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_feed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.FeedFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/feed_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        tools:src="@tools:sample/avatars"
        app:srcCompat="@drawable/ic_action_feed"/>

    <TextView
        android:id="@+id/exemplo_atualizacao"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:elegantTextHeight="true"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:text="Este é um exemplo de atualização do feed" />

</FrameLayout>